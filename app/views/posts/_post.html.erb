<div id="<%= dom_id post %>" class="flex flex-col items-center w-1/3 h-auto rounded-[50px] relative">
  <div class="flex flex-row justify-center items-center">
      <p class="my-5 font-bold text-4xl align-top text-justify">
        <%= post.title %>
      </p>
  </div>


  <p class="italic font-normal">
    <%= post.author %>
  </p>

  <p class="my-5 text-justify">
    <%= post.content %>
  </p>


  <div class="flex flex-row gap-6 justify-center items-center mb-16">
    <% if action_name != "show" %>
      <%= link_to 'Edit Article', edit_post_path(post), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
      <hr class="mt-6">
    <% end %>
  </div>

</div>
