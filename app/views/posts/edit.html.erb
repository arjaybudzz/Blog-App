<%provide(:title, 'Edit Article')%>

<div class="mx-auto md:w-2/3 w-full mt-20">
  <h1 class="font-bold text-4xl">Edit Article</h1>

  <%= render "form", post: @post %>

  <div class="inline-block ml-2">
      <%= button_to 'Delete Article', post_path(@post), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>

  <%= link_to "Back to home", posts_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
</div>
